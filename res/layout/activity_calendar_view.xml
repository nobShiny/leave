<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:gravity="center_vertical"
        android:paddingTop="10dp" >

        <LinearLayout
            android:id="@+id/btn_prev_month_leave"
            android:layout_width="0.0dp"
            android:layout_height="fill_parent"
            android:layout_weight="0.2"
            android:gravity="center"
            android:orientation="vertical" >
 
            <TextView
                android:id="@+id/left_img_leave"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/jiantou_state"
                android:duplicateParentState="true"
                android:text=""
                android:textSize="16.0dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0.0dp"
            android:layout_height="fill_parent"
            android:layout_weight="0.6"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_month_leave"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="xxxx年14月"
                android:textColor="#999999"
                android:textSize="21.0dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/btn_next_month_leave"
            android:layout_width="0.0dp"
            android:layout_height="fill_parent"
            android:layout_weight="0.2"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/right_img_leave"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/jiantou_states"
                android:duplicateParentState="true"
                android:text=""
                android:textSize="16.0dp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="#ffffff"
        android:padding="10dp" >

        <TextView
            style="@style/weekendDays"
            android:text="日" />

        <TextView
            style="@style/weekNames"
            android:text="一" />

        <TextView
            style="@style/weekNames"
            android:text="二" />

        <TextView
            style="@style/weekNames"
            android:text="三" />

        <TextView
            style="@style/weekNames"
            android:text="四" />

        <TextView
            style="@style/weekNames"
            android:text="五" />

        <TextView
            style="@style/weekendDays"
            android:text="六" />
    </LinearLayout>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="#D2D2D2"/>

        <GridView
            android:id="@+id/gridview_leave"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#fff"
            android:clickable="true"
            android:clipChildren="true"
            android:columnWidth="55.0dp"
            android:listSelector="@null"
            android:numColumns="7"
            android:paddingTop="8dp"
            android:stretchMode="columnWidth" />

</LinearLayout>