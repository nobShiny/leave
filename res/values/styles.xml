<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- 隐藏标题 -->
        <item name="android:windowNoTitle">true</item>
    </style>
    
    <style name="weekendDays">
        <item name="android:layout_width">0.0dip</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_weight">1.0</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#999999</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="weekNames">
        <item name="android:layout_width">0.0dip</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_weight">1.0</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#141414</item>
        <item name="android:textSize">14sp</item>
    </style>
    <!-- leave popwindow 动画 -->
    <style name="popwin_anim_style">  
     <item name="android:windowEnterAnimation">@anim/leave_popwindow_show</item>  
     <item name="android:windowExitAnimation">@anim/leave_popwindow_hide</item>  
</style>  

</resources>
